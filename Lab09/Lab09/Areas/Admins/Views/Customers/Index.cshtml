@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Lab09.Models.Customer>
@using System.Text.RegularExpressions;

@functions {
    public string StripHtml(string input)
    {
        if (string.IsNullOrWhiteSpace(input))
            return string.Empty;

        // Loại bỏ tất cả các thẻ HTML
        return Regex.Replace(input, "<.*?>", string.Empty);
    }
    public string DecodeHtml(string input)
    {
        return System.Web.HttpUtility.HtmlDecode(input);
    }
    public string Truncate(string input, int maxLength)
    {
        if (string.IsNullOrWhiteSpace(input))
            return string.Empty;

        if (input.Length <= maxLength)
            return input;

        return input.Substring(0, maxLength) + "...";
    }
}

@{
    ViewData["Title"] = "Khách hàng";
    Layout = "~/Areas/Admins/Views/Shared/_Admin.cshtml";
    int index = (Model.PageNumber - 1) * Model.PageSize + 1; ;

}

<style>
    input {
        outline: none !important; /* Tắt outline */
        border: none !important; /* Tắt border */
        box-shadow: none !important; /* Tắt shadow nếu có */
    }

        input:focus::placeholder {
            color: transparent;
        }
</style>

<h1>Khách hàng</h1>

<form method="get" class="d-flex align-items-center mb-3">
    <input type="text"
           name="name"
           class="form-control me-2"
           placeholder="Nhập từ khóa tìm kiếm..."
           value="@ViewBag.keyword"
           style="max-width: 300px;" />
    <button type="submit" class="btn btn-primary">
        <i class="fas fa-search"></i> Tìm kiếm
    </button>
</form>
@if (Model.Any())
{
<table class="table">
    <thead>
        <tr>
            <th class="text-center align-middle">Số thứ tự</th>

            <th class="text-center align-middle">
                @Html.DisplayNameFor(model => model.FirstOrDefault()
                         .Username)
            </th>
            <th class="text-center align-middle">
                @Html.DisplayNameFor(model => model.FirstOrDefault()
                         .Address)
            </th>
            <th class="text-center align-middle">
                @Html.DisplayNameFor(model => model.FirstOrDefault()
                         .Email)
            </th>
            <th class="text-center align-middle">
                @Html.DisplayNameFor(model => model.FirstOrDefault()
                         .Phone)
            </th>
            <th class="text-center align-middle">
                @Html.DisplayNameFor(model => model.FirstOrDefault()
                         .Avatar)
            </th>
            <th class="text-center align-middle">
                @Html.DisplayNameFor(model => model.FirstOrDefault()
                         .CreatedDate)
            </th>
            <th class="text-center align-middle">
                @Html.DisplayNameFor(model => model.FirstOrDefault()
                         .UpdateDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
                <td class="text-center align-middle">
                    @(index++)
                </td>
                <td class="text-center align-middle">
                @Html.DisplayFor(modelItem => item.Username)
            </td>
                <td class="text-center align-middle">
                @Html.DisplayFor(modelItem => item.Address)
            </td>
                <td class="text-center align-middle">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
                <td class="text-center align-middle">
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
                <td class="text-center align-middle">
                @Html.DisplayFor(modelItem => item.Avatar)
            </td>
                <td class="text-center align-middle">
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
                <td class="text-center align-middle">
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
                <td class="text-center align-middle">
                        <a class="btn btn-warning btn-sm btn-edit" data-id="@item.Id" data-bs-toggle="modal" data-bs-target="#sharedModal">
                            <i class="fas fa-edit"></i> Sửa
                        </a>
                        <a class="btn btn-info btn-sm btn-details" data-id="@item.Id" data-bs-toggle="modal" data-bs-target="#sharedModal">
                            <i class="fas fa-eye"></i> Chi tiết
                        </a>
                        <a class="btn btn-danger btn-sm btn-delete" data-id="@item.Id" data-bs-toggle="modal" data-bs-target="#sharedModal">
                            <i class="fas fa-trash-alt"></i> Xóa
                        </a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="modal fade" id="sharedModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                    <h5 class="modal-title" id="modal-title"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Nội dung sẽ được tải động -->
                    <div id="modalContent"></div>
            </div>
        </div>
    </div>
</div>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page = page, name = ViewBag.keyword }), new X.PagedList.Web.Common.PagedListRenderOptions
{
    LiElementClasses = new string[] { "page-item" },
    PageClasses = new string[] { "page-link" }
})
}
else
{
    <div class="alert alert-danger text-center align-middle">
        @if (string.IsNullOrEmpty(ViewBag.keyword))
        {
            <p>Không có sản phẩm nào trong danh sách hiện tại.</p>
        }
        else
        {
            <p>Không tìm thấy sản phẩm nào có từ: "<strong>@ViewBag.keyword</strong>".</p>
        }
    </div>
}
<script>
    $(document).ready(function () {
        $('.btn-details').on('click', function () {
            var id = $(this).data('id'); // Lấy ID sản phẩm

            // Gửi yêu cầu AJAX để lấy chi tiết sản phẩm
            $.ajax({
                url: '/Admins/Customers/Details/' + id,
                type: 'GET',
                success: function (response) {
                    $('#modal-title').text('Chi tiết sản phẩm');
                    $('#modalContent').html(response); // Chèn nội dung vào modal
                },
                error: function () {
                    alert('Không thể tải chi tiết sản phẩm.');
                }
            });
        });

        // Mở modal Sửa
        $('.btn-edit').click(function () {
            var id = $(this).data('id');
            $.ajax({
                url: '/Admins/Customers/Edit/' + id,
                type: 'PUT',
                success: function (response) {
                    $('#modal-title').text('Chỉnh sửa sản phẩm');
                    $('#modalContent').html(response); // Chèn nội dung vào modal
                },
                error: function () {
                    alert('Không thể tải trang chỉnh sửa sản phẩm.');
                }
            });
        });

        // Mở modal Xóa
        $('.btn-delete').click(function () {
            var id = $(this).data('id'); // Lấy ID sản phẩm
            // Gửi yêu cầu AJAX để lấy chi tiết sản phẩm
            $.ajax({
                url: '/Admins/Customers/Delete/' + id,
                type: 'DELETE',
                success: function (response) {
                     $('#modal-title').text('Xóa sản phẩm');
                     $('#modalContent').html(response); // Chèn nội dung vào modal
                },
                error: function () {
                     alert('Không thể tải trang xóa sản phẩm.');
                }
            });
        });
    });
</script>