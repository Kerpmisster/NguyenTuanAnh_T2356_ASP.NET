<script>
    $(document).ready(function () {
        $('.btn-details').on('click', function () {
            var id = $(this).data('id'); // Lấy ID sản phẩm

            // Gửi yêu cầu AJAX để lấy chi tiết sản phẩm
            $.ajax({
                url: '/Admins/Products/Details/' + id,
                type: 'GET',
                success: function (response) {
                    $('#modal-title').text('Chi tiết sản phẩm');
                    $('#modalContent').html(response); // Chèn nội dung vào modal
                },
                error: function () {
                    alert('Không thể tải chi tiết sản phẩm.');
                }
            });
        });

        // Mở modal Thêm mới
        $('#btn-create').click(function () {
            $('#modal-title').text('Thêm sản phẩm mới');
            $.get('/Admins/Products/Create', function (data) {
                $('#modal-body').html(data);
                $('#modal-action').modal('show');
            });
        });

        // Mở modal Sửa
        $('.btn-edit').click(function () {
            const id = $(this).data('id');
            $('#modal-title').text('Chỉnh sửa sản phẩm');
            $.get(`/Admins/Products/Edit/${id}`, function (data) {
                $('#modal-body').html(data);
                $('#modal-action').modal('show');
            });
        });

        // Mở modal Xóa
        $('.btn-delete').click(function () {
            const id = $(this).data('id');
            $('#modal-title').text('Xóa sản phẩm');
            $.get(`/Admins/Products/Delete/${id}`, function (data) {
                $('#modal-body').html(data);
                $('#modal-action').modal('show');
            });
        });

        // Lưu thay đổi
        $('#btn-save').click(function () {
            const form = $('#modal-body form');
            const actionUrl = form.attr('action');
            const formData = form.serialize();
            $.post(actionUrl, formData, function (data) {
                if (data.success) {
                    $('#modal-action').modal('hide');
                    location.reload(); // Tải lại trang
                } else {
                    $('#modal-body').html(data); // Hiển thị lỗi (nếu có)
                }
            });
        });
    });
    
</script>

