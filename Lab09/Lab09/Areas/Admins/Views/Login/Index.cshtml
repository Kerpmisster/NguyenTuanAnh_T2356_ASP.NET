@model Lab09.Areas.Admins.Models.Login
@{
    Layout = null;
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        <ul>
            @foreach (var modelState in ViewData.ModelState.Values)
            {
                foreach (var error in modelState.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Login</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <!-- Bootstrap 4 -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Custom Style -->
    <style>
        body {
            display: flex;
            justify-content: center; /* Căn giữa theo chiều ngang */
            align-items: center; /* Căn giữa theo chiều dọc */
            min-height: 100vh; /* Chiều cao tối thiểu là toàn màn hình */
            margin: 0; /* Loại bỏ margin mặc định */
            background-color: #f4f6f9; /* (Tùy chọn) Thêm màu nền */
            font-family: 'Source Sans Pro', sans-serif;
        }

        .login-box {
            background: #ffffff;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 420px;
            margin: 80px auto;
        }

        .login-title {
            font-weight: 700;
            font-size: 26px;
            color: #495057;
            text-align: center;
            margin-bottom: 20px;
        }

        .input-group-text {
            background-color: #e9ecef;
            border: none;
            border-radius: 8px 0 0 8px;
            width: 100%;
        }

        input {
            outline: none !important; /* Tắt outline */
            border: none !important; /* Tắt border */
            box-shadow: none !important; /* Tắt shadow nếu có */
        }


        input:focus::placeholder {
            color: transparent;
        }

        .input-group > :not(:first-child):not(.dropdown-menu):not(.valid-tooltip):not(.valid-feedback):not(.invalid-tooltip):not(.invalid-feedback){
            margin: 0;
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
        }

        .form-control {
            border-radius: 0 8px 8px 0;
        }

            .form-control:focus {
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
                border-color: #80bdff;
            }

        .btn-primary {
            border-radius: 8px;
            background-color: #007bff;
            border: none;
            transition: all 0.3s;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .icheck-primary input {
            cursor: pointer;
        }

        .toggle-password {
            cursor: pointer;
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            z-index: 10;
        }


    </style>
</head>
<body>
    <div class="login-box">
        <div class="login-title">Đăng nhập Admin</div>
        <form asp-action="Index" method="post">
            <!-- Email input -->
            <div class="form-group position-relative mb-3">
                <label for="email">Email</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" >
                            <i class="fas fa-envelope" style="line-height: 2;"></i>
                        </span>
                    </div>
                    <input id="email" asp-for="Email" type="email" class="form-control" placeholder="Nhập email của bạn..." required>
                </div>
            </div>

            <!-- Password input -->
            <div class="form-group position-relative mb-3">
                <label for="password">Mật khẩu</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" >
                            <i class="fas fa-lock" style="line-height: 2;"></i>
                        </span>
                    </div>
                    <input id="password" asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu..." required>
                    <span class="toggle-password" onclick="togglePasswordVisibility()">
                        <i id="toggleIcon" class="fas fa-eye-slash"></i>
                    </span>
                </div>
            </div>

            <!-- Remember me -->
            <div class="form-group d-flex justify-content-between align-items-center mb-3">
                <div class="icheck-primary">
                    <input type="checkbox" id="rememberme">
                    <label for="rememberme">Ghi nhớ tôi</label>
                </div>
                <a href="#" class="text-secondary">Quên mật khẩu?</a>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-block btn-outline-primary">Đăng nhập</button>
        </form>
    </div>

    <!-- Scripts -->
    <script>
        function togglePasswordVisibility() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.getElementById('toggleIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            }
        }
    </script>
</body>
</html>

