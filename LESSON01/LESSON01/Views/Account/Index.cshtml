@{
    ViewData["title"] = "Index";
    var accounts = ViewBag.accounts;
}

<div class="row">
    @foreach (var item in accounts)
    {
        <div class="col-md-3">
            <div class="thumbnail">
                <img src="@item.Avatar" width="100" alt="Alternate Text" />
                <div class="caption"> 
                    <h3>@item.Name</h3>
                    <p>@item.Bio</p>
                    <p>
                        <a asp-area="" asp-controller="Account" asp-action="Profile" class="btn btn-success btn-block">Profile</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>